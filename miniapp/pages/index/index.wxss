.page {
  padding: 24rpx;
}

.header {
  padding: 24rpx;
  margin-bottom: 20rpx;
}

.title {
  font-size: 40rpx;
  font-weight: 700;
}

.subtitle {
  margin-top: 8rpx;
  color: #6b7280;
  font-size: 24rpx;
}

.stock {
  padding: 20rpx;
  margin-bottom: 16rpx;
}

.row-top,
.row-main,
.row-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.row-main {
  margin-top: 10rpx;
}

.row-meta {
  margin-top: 12rpx;
  color: #6b7280;
  font-size: 24rpx;
}

.name {
  font-size: 32rpx;
  font-weight: 600;
}

.price {
  font-size: 36rpx;
  font-weight: 700;
}

.rating {
  font-size: 24rpx;
  color: #2563eb;
}

.change {
  font-size: 28rpx;
  font-weight: 600;
}

.loading,
.error {
  text-align: center;
  color: #6b7280;
  margin: 20rpx 0;
}

.error {
  color: #dc2626;
}
